{
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:javin": "turbo run dev --filter=javin",
    "dev:api": "turbo run dev --filter=javin-api",
    "build": "turbo run build",
    "build:javin": "turbo run build --filter=javin",
    "build:api": "turbo run build --filter=javin-api",
    "start": "turbo run start",
    "start:api": "turbo run start --filter=javin-api",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "dependencies": {
    "turbo": "2.4.4"
  }
}